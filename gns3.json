{
   "variables" : {
      "ssh_pass" : "gns3",
      "ssh_name" : "gns3",
      "hostname" : "gns3vm",
      "memory": "2048",
      "disk_size": "20000",
      "data_disk": "500000",
      "iso_checksum_type": "sha256",
      "iso_checksum": "7d8e0055d663bffa27c1718685085626cb59346e7626ba3d3f476322271f573e",
      "iso_url": "http://cdimage.ubuntu.com/ubuntu/releases/bionic/release/ubuntu-18.04.3-server-amd64.iso",
      "gns3_version": "{{env `GNS3_VERSION`}}",
      "boot_command_prefix": "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>"
   },
   "provisioners" : [
      {
         "destination" : "/tmp/config",
         "type" : "file",
         "source" : "config"
      },
      {
         "destination" : "/tmp/gns3welcome.py",
         "type" : "file",
         "source" : "scripts/welcome.py"
      },
      {
         "type" : "shell",
         "script" : "scripts/setup_ubuntu.sh",
         "execute_command" : "echo  {{user `ssh_name`}} | {{ .Vars }} sudo -E -S sh '{{ .Path }}'"
      },
      {
         "type" : "shell",
         "script" : "scripts/provision.sh"
      },
      {
         "destination" : "/home/gns3/.config/GNS3/gns3vm_version",
         "type" : "file",
         "source" : "version"
      },
      {
         "type": "shell",
         "inline": "sudo reboot # this is to finish installing the new kernel",
         "expect_disconnect": true,
         "pause_after": "20s"
      },
      {
         "type": "shell",
         "script": "scripts/splashscreen.sh"
      },
      {
         "type" : "shell",
         "script" : "scripts/cleaner.sh"
      }
   ],
   "builders" : [
      {
         "type" : "virtualbox-iso",
         "ssh_wait_timeout" : "120m",
         "ssh_timeout" : "15m",
         "boot_wait" : "20s",
         "disk_size" : "{{user `disk_size`}}",
         "iso_checksum_type" : "{{user `iso_checksum_type`}}",
         "shutdown_command" : "echo {{user `ssh_name`}} | sudo -S shutdown -P now",
         "shutdown_timeout": "60m",
         "format": "ova",
         "headless": true,
         "vboxmanage" : [
            [
               "modifyvm",
               "{{.Name}}",
               "--memory",
               "{{user `memory`}}"
            ],
            [
               "modifyvm",
               "{{.Name}}",
               "--cpus",
               "1"
            ],
            [
               "createhd",
               "--format",
               "VDI",
               "--filename",
               "output-{{build_name}}/opt.vdi",
               "--variant",
               "Standard",
               "--size",
               "{{user `data_disk`}}"
            ],
            [
               "storagectl",
               "{{.Name}}",
               "--name",
               "SATA Controller",
               "--add",
               "sata",
               "--controller",
               "IntelAHCI"
            ],
            [
               "storageattach",
               "{{.Name}}",
               "--storagectl",
               "SATA Controller",
               "--port",
               "2",
               "--type",
               "hdd",
               "--medium",
               "output-{{build_name}}/opt.vdi"
            ]
         ],
         "vboxmanage_post" : [
             [
               "modifyvm",
               "{{.Name}}",
               "--nic1",
               "hostonly"
             ],
             [
               "modifyvm",
               "{{.Name}}",
               "--nictype1",
               "82540EM"
             ],
             [
                "modifyvm",
                "{{.Name}}",
                "--hostonlyadapter1",
                "vboxnet0"
             ],
             [
                "modifyvm",
                "{{.Name}}",
                "--nic2",
                "nat"
             ],
             [
               "modifyvm",
               "{{.Name}}",
               "--nictype2",
               "82540EM"
             ],
             [
                "modifyhd",
                "--compact",
                "{{pwd}}/output-{{build_name}}/{{.Name}}.vdi"
             ],
             [
                "modifyhd",
                "--compact",
                "{{pwd}}/output-{{build_name}}/opt.vdi"
             ]
         ],
         "http_directory" : "http",
         "vm_name" : "GNS3 VM",
         "ssh_username" : "{{user `ssh_name`}}",
         "iso_checksum" : "{{user `iso_checksum`}}",
         "ssh_password" : "{{user `ssh_pass`}}",
         "boot_command": [
            "{{ user `boot_command_prefix` }}",
            "/install/vmlinuz noapic ",
            "initrd=/install/initrd.gz ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "hostname={{ user `hostname` }} ",
            "grub-installer/bootdev=/dev/sda<wait> ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "passwd/user-fullname={{ user `ssh_fullname` }} ",
            "passwd/user-password={{ user `ssh_password` }} ",
            "passwd/user-password-again={{ user `ssh_password` }} ",
            "passwd/username={{ user `ssh_username` }} ",
            "-- <enter>"
         ],
         "guest_additions_mode" : "disable",
         "guest_os_type": "Ubuntu_64",
         "iso_url" : "{{user `iso_url`}}"
      },
      {
         "boot_wait" : "20s",
         "type" : "vmware-iso",
         "disk_size": "{{user `disk_size`}}",
         "disk_additional_size": ["{{user `data_disk`}}"],
         "disk_type_id" : 0,
         "guest_os_type": "ubuntu-64",
         "ssh_wait_timeout" : "120m",
         "ssh_timeout" : "15m",
         "vm_name" : "GNS3 VM",
         "vmdk_name": "GNS3 VM",
         "http_directory" : "http",
         "iso_checksum" : "{{user `iso_checksum`}}",
         "ssh_username" : "{{user `ssh_name`}}",
         "vmx_data" : {
            "memsize" : "{{user `memory`}}",
            "cpuid.coresPerSocket" : "1",
            "numvcpus": "1",
            "vhv.enable": "TRUE",
            "hints.hideAll": "TRUE",
            "msg.noOk": "TRUE",
            "ethernet0.present": "TRUE",
            "ethernet0.startConnected": "TRUE",
            "ethernet0.connectionType": "nat",
            "ethernet0.addressType": "generated",
            "ethernet0.generatedAddressOffset": "0",
            "ethernet0.wakeOnPcktRcv": "FALSE",
            "ethernet0.pciSlotNumber": "32"
         },
         "vmx_data_post":
          {
            "ethernet0.connectionType": "hostonly",
            "ethernet1.present": "TRUE",
            "ethernet1.startConnected": "TRUE",
            "ethernet1.connectionType": "nat",
            "ethernet1.addressType": "generated",
            "ethernet1.generatedAddressOffset": "10",
            "ethernet1.wakeOnPcktRcv": "FALSE",
            "ethernet1.pciSlotNumber": "33",
            "ethernet1.virtualDev": "e1000"
         },
         "iso_checksum_type" : "{{user `iso_checksum_type`}}",
         "headless": true,
         "shutdown_command" : "echo {{user `ssh_name`}} | sudo -S shutdown -P now",
         "shutdown_timeout": "60m",
         "ssh_password" : "{{user `ssh_pass`}}",
         "boot_command": [
            "{{ user `boot_command_prefix` }}",
            "/install/vmlinuz noapic ",
            "initrd=/install/initrd.gz ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
            "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
            "hostname={{ user `hostname` }} ",
            "grub-installer/bootdev=/dev/sda<wait> ",
            "fb=false debconf/frontend=noninteractive ",
            "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA console-setup/ask_detect=false ",
            "passwd/user-fullname={{ user `ssh_fullname` }} ",
            "passwd/user-password={{ user `ssh_password` }} ",
            "passwd/user-password-again={{ user `ssh_password` }} ",
            "passwd/username={{ user `ssh_username` }} ",
            "-- <enter>"
         ],
         "skip_compaction": true,
         "iso_url" : "{{user `iso_url`}}"
      }
   ]
}
