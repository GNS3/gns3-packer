{
   "variables" : {
      "ssh_pass" : "gns3",
      "ssh_name" : "gns3",
      "hostname" : "gns3vm",
      "memory": "2048",
      "cpus": "1",
      "cores": "1",
      "disk_size": "20000",
      "data_disk": "500000",
      "iso_checksum_type": "sha256",
      "iso_checksum": "5035be37a7e9abbdc09f0d257f3e33416c1a0fb322ba860d42d74aa75c3468d4",
      "iso_url": "https://releases.ubuntu.com/20.04/ubuntu-20.04.5-live-server-amd64.iso",
      "gns3_version": "{{env `GNS3_VERSION`}}"
   },
   "provisioners" : [
      {
         "destination" : "/tmp/config",
         "type" : "file",
         "source" : "config"
      },
      {
         "destination" : "/tmp/gns3welcome.py",
         "type" : "file",
         "source" : "scripts/welcome.py"
      },
      {
         "type" : "shell",
         "script" : "scripts/setup_ubuntu.sh",
         "execute_command" : "echo  {{user `ssh_name`}} | {{ .Vars }} sudo -E -S bash '{{ .Path }}'"
      },
      {
         "type" : "shell",
         "script" : "scripts/provision.sh"
      },
      {
        "inline": "sudo -u gns3 mkdir -p ~/.config/GNS3/",
        "type": "shell"
      },
      {
         "destination" : "/home/gns3/.config/GNS3/gns3vm_version",
         "type" : "file",
         "source" : "version"
      },
      {
         "type": "shell",
         "script" : "scripts/reboot.sh",
         "only": ["virtualbox-iso", "qemu"],
         "expect_disconnect": true
      },
      {
         "type": "shell",
         "pause_before": "30s",
         "only": ["virtualbox-iso", "qemu"],
         "scripts": [
            "scripts/splashscreen.sh",
            "scripts/cleaner.sh"
         ]
      }
   ],
   "builders" : [
       {
         "type" : "virtualbox-iso",
         "ssh_timeout": "10m",
         "ssh_handshake_attempts": "20",
         "boot_wait" : "10s",
         "disk_size" : "{{user `disk_size`}}",
         "iso_checksum_type" : "{{user `iso_checksum_type`}}",
         "shutdown_command" : "echo {{user `ssh_name`}} | sudo -S shutdown -P now",
         "shutdown_timeout": "60m",
         "format": "ova",
         "headless": true,
         "vboxmanage" : [
            [
               "modifyvm",
               "{{.Name}}",
               "--memory",
               "{{user `memory`}}"
            ],
            [
               "modifyvm",
               "{{.Name}}",
               "--cpus",
               "{{user `cpus`}}"
            ],
            [
               "createhd",
               "--format",
               "VDI",
               "--filename",
               "output-{{build_name}}/opt.vdi",
               "--variant",
               "Standard",
               "--size",
               "{{user `data_disk`}}"
            ],
            [
               "storagectl",
               "{{.Name}}",
               "--name",
               "SATA Controller",
               "--add",
               "sata",
               "--controller",
               "IntelAHCI"
            ],
            [
               "storageattach",
               "{{.Name}}",
               "--storagectl",
               "SATA Controller",
               "--port",
               "2",
               "--type",
               "hdd",
               "--medium",
               "output-{{build_name}}/opt.vdi"
            ]
         ],
         "vboxmanage_post" : [
             [
               "modifyvm",
               "{{.Name}}",
               "--nic1",
               "hostonly"
             ],
             [
               "modifyvm",
               "{{.Name}}",
               "--nictype1",
               "82540EM"
             ],
             [
                "modifyvm",
                "{{.Name}}",
                "--hostonlyadapter1",
                "vboxnet0"
             ],
             [
                "modifyvm",
                "{{.Name}}",
                "--nic2",
                "nat"
             ],
             [
               "modifyvm",
               "{{.Name}}",
               "--nictype2",
               "82540EM"
             ],
             [
                "modifyhd",
                "--compact",
                "{{pwd}}/output-{{build_name}}/{{.Name}}.vdi"
             ],
             [
                "modifyhd",
                "--compact",
                "{{pwd}}/output-{{build_name}}/opt.vdi"
             ]
         ],
         "http_directory" : "http",
         "vm_name" : "GNS3 VM",
         "ssh_username" : "{{user `ssh_name`}}",
         "iso_checksum" : "{{user `iso_checksum`}}",
         "ssh_password" : "{{user `ssh_pass`}}",
         "boot_command": [
            "<enter><enter><f6><esc><wait> ",
            "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
            "<enter>"
         ],
         "guest_additions_mode" : "disable",
         "guest_os_type": "Ubuntu_64",
         "iso_url" : "{{user `iso_url`}}"
      },
      {
         "type" : "vmware-iso",
         "boot_wait" : "5s",
         "disk_size": "{{user `disk_size`}}",
         "disk_additional_size": ["{{user `data_disk`}}"],
         "disk_type_id" : 0,
         "guest_os_type": "ubuntu-64",
         "ssh_timeout": "10m",
         "ssh_handshake_attempts": "20",
         "vm_name" : "GNS3 VM",
         "vmdk_name": "GNS3 VM",
         "http_directory" : "http",
         "iso_checksum" : "{{user `iso_checksum`}}",
         "vmx_data" : {
            "memsize" : "{{user `memory`}}",
            "cpuid.coresPerSocket" : "{{user `cores`}}",
            "numvcpus": "{{user `cpus`}}",
            "vhv.enable": "TRUE",
            "hints.hideAll": "TRUE",
            "msg.noOk": "TRUE"
         },
         "iso_checksum_type" : "{{user `iso_checksum_type`}}",
         "headless": true,
         "shutdown_command" : "sudo /sbin/shutdown -h now",
         "shutdown_timeout": "60m",
         "ssh_username" : "{{user `ssh_name`}}",
         "ssh_password" : "{{user `ssh_pass`}}",
         "boot_command": [
            "<enter><enter><f6><esc><wait> ",
            "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/",
            "<enter>"
         ],
         "skip_compaction": true,
         "iso_url" : "{{user `iso_url`}}"
      },
      {
         "type": "qemu",
         "vm_name" : "GNS3 VM",
         "qemu_binary": "qemu-system-aarch64",
         "disk_compression": true,
         "disk_image": true,
         "headless": true,
         "net_device": "virtio-net-pci",
         "iso_url" : "{{user `iso_url`}}",
         "iso_checksum" : "{{user `iso_checksum`}}",
         "iso_checksum_type": "{{user `iso_checksum_type`}}",
         "use_default_display": true,
         "http_directory": "http",
         "qemuargs": [
                ["-drive", "file=gns3vm-disk1.qcow2,if=virtio,format=qcow2,cache=none"],
                ["-drive", "file=gns3vm-disk2.qcow2,if=virtio,format=qcow2,cache=none"],
                ["-serial", "file:serial.out"],
                ["-machine", "virt,gic-version=3,accel=kvm"],
                ["-cpu", "max"],
                ["-smp", "8"],
                ["-m", "4096"],
                ["-bios", "/usr/share/qemu-efi-aarch64/QEMU_EFI.fd"],
                ["-boot", "strict=off"]
         ],
         "shutdown_command" : "echo {{user `ssh_name`}} | sudo -S shutdown -P now",
         "shutdown_timeout": "20m",
         "ssh_username" : "{{user `ssh_name`}}",
         "ssh_password" : "{{user `ssh_pass`}}",
         "ssh_timeout": "20m",
         "ssh_handshake_attempts": "20"
      }
   ]
}
